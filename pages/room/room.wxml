<!--pages/room/room.wxml-->
<!-- 页面 -->
<view class="page-new">
  <view class="padding flex flex-column margin-sm radius-lg btn-new">
    <view>房间号：{{title}}</view>
    <view>一局游戏有n轮，n为总人数。每轮都会随机指定一位玩家为恶鹅</view>
    <view class="cu-avatar-group">
      <view class="" wx:for="{{userList}}" wx:key="item">
        <view class="cu-item">
          <view class="cu-avatar round lg" style="background-image:url({{item.logo}});"></view>
          <view class="content">
            <view class="text-grey">{{item.nickname}}</view>
            <view class="text-gray text-sm flex">
              <text class="text-cut">
                <text class="cuIcon-infofill text-red  margin-right-xs"></text> 座位号 {{item.index}}
              </text>
            </view>
          </view>
          <view class="action">
            <view class="cu-tag round bg-grey sm">5分</view>
          </view>
        </view>
      </view>
    </view>
    <!-- <navigator open-type="navigate" hover-class='none' url="/pages/round/round"> -->
      <button class="cu-btn bg-grey lg" bindtap="begin">开始游戏</button>
    <!-- </navigator> -->
    <button class="cu-btn bg-red margin-tb-sm lg" bindtap="invite">邀请好友</button>
  </view>
</view>